<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zb.mapper.CategoryMapper">

    <select id="getCategoryById" resultType="com.zb.pojo.Category">
        select
        id as id,
        name as name,
        label as label,
        parentid as parentid,
        isshow as isshow,
        orderby as orderby,
        isleaf as isleaf
        from xc_course.category
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null">
                and id=#{id}
            </if>
        </trim>
    </select>

    <select id="getCategoryListByMap" resultType="com.zb.pojo.Category" parameterType="java.util.Map">
        select
        id as id,
        name as name,
        label as label,
        parentid as parentid,
        isshow as isshow,
        orderby as orderby,
        isleaf as isleaf
        from xc_course.category
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null and id!=''">
                and id=#{id}
            </if>
            <if test="name != null and name!=''">
                and name=#{name}
            </if>
            <if test="label != null and label!=''">
                and label=#{label}
            </if>
            <if test="parentid != null and parentid!=''">
                and parentid=#{parentid}
            </if>
            <if test="isshow != null and isshow!=''">
                and isshow=#{isshow}
            </if>
            <if test="orderby != null and orderby!=''">
                and orderby=#{orderby}
            </if>
            <if test="isleaf != null and isleaf!=''">
                and isleaf=#{isleaf}
            </if>
        </trim>
        ORDER BY orderby
        <if test="beginPos != null and pageSize != null ">
            limit #{beginPos},#{pageSize}
        </if>
    </select>

    <select id="getCategoryCountByMap" resultType="Integer" parameterType="java.util.Map">
        select count(*) from xc_course.category
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null and id!=''">
                and id=#{id}
            </if>
            <if test="name != null and name!=''">
                and name=#{name}
            </if>
            <if test="label != null and label!=''">
                and label=#{label}
            </if>
            <if test="parentid != null and parentid!=''">
                and parentid=#{parentid}
            </if>
            <if test="isshow != null and isshow!=''">
                and isshow=#{isshow}
            </if>
            <if test="orderby != null and orderby!=''">
                and orderby=#{orderby}
            </if>
            <if test="isleaf != null and isleaf!=''">
                and isleaf=#{isleaf}
            </if>
        </trim>
    </select>

    <insert id="insertCategory" parameterType="com.zb.pojo.Category">
        insert into xc_course.category(id,
                                       name,
                                       label,
                                       parentid,
                                       isshow,
                                       orderby,
                                       isleaf)
        values (#{id},
                #{name},
                #{label},
                #{parentid},
                #{isshow},
                #{orderby},
                #{isleaf})
    </insert>

    <update id="updateCategory" parameterType="com.zb.pojo.Category">
        update xc_course.category
        <trim prefix="set" suffixOverrides="," suffix="where id=#{id}">
            <if test="name != null and name!=''">
                name=#{name},
            </if>
            <if test="label != null and label!=''">
                label=#{label},
            </if>
            <if test="parentid != null and parentid!=''">
                parentid=#{parentid},
            </if>
            <if test="isshow != null and isshow!=''">
                isshow=#{isshow},
            </if>
            <if test="orderby != null and orderby!=''">
                orderby=#{orderby},
            </if>
            <if test="isleaf != null and isleaf!=''">
                isleaf=#{isleaf}
            </if>
        </trim>
    </update>
</mapper>