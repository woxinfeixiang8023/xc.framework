<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zb.mapper.CoursePicMapper">

    <select id="getCoursePicById" resultType="com.zb.pojo.CoursePic">
        select
        courseid as courseid,
        pic as pic
        from xc_course.course_pic
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null">
                and id=#{id}
            </if>
        </trim>
    </select>

    <select id="getCoursePicListByMap" resultType="com.zb.pojo.CoursePic" parameterType="java.util.Map">
        select
        courseid as courseid,
        pic as pic
        from xc_course.course_pic
        <trim prefix="where" prefixOverrides="and | or">
            <if test="courseid != null and courseid!=''">
                and courseid=#{courseid}
            </if>
            <if test="pic != null and pic!=''">
                and pic=#{pic}
            </if>
        </trim>
        <if test="beginPos != null and pageSize != null ">
            limit #{beginPos},#{pageSize}
        </if>
    </select>

    <select id="getCoursePicCountByMap" resultType="Integer" parameterType="java.util.Map">
        select count(*) from xc_course.course_pic
        <trim prefix="where" prefixOverrides="and | or">
            <if test="courseid != null and courseid!=''">
                and courseid=#{courseid}
            </if>
            <if test="pic != null and pic!=''">
                and pic=#{pic}
            </if>
        </trim>
    </select>

    <insert id="insertCoursePic" parameterType="com.zb.pojo.CoursePic">
        insert into xc_course.course_pic(courseid,
                                         pic)
        values (#{courseid},
                #{pic})
    </insert>

    <update id="updateCoursePic" parameterType="com.zb.pojo.CoursePic">
        update xc_course.course_pic
        <trim prefix="set" suffixOverrides="," suffix="where id=#{id}">
            <if test="courseid != null and courseid!=''">
                courseid=#{courseid},
            </if>
            <if test="pic != null and pic!=''">
                pic=#{pic}
            </if>
        </trim>
    </update>
</mapper>